<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rp.seller.repository.SellerRepositoryImpl">
	<insert id="insertSeller" parameterType="com.rp.seller.model.Seller">
		INSERT INTO rp_seller (
			name
		) values (
			#{name}
		)
	</insert>
	
	<select id="selectSellers" parameterType="com.rp.seller.model.Seller" resultType="com.rp.seller.model.Seller">
		SELECT
			id,
			name
		FROM rp_seller
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="id != null">
			AND id = #{id}
			</if>
			<if test="name != null">
			AND name = #{name}
			</if>
		</trim>
	</select>

</mapper>