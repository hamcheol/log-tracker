<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rp.order.repository.DeliveryRepositoryImpl">
	<insert id="insertDelivery" parameterType="com.rp.order.model.Delivery">
		INSERT INTO es_delv (
			ord_no,
			addr,
			shp_no
		) values (
			#{ordNo},
			#{addr},
			#{shpNo}
		)
	</insert>
	
	<update id="updateDelivery" parameterType="com.rp.order.model.Delivery">
		UPDATE es_delv
		<trim prefix="SET" suffixOverrides=",">
			<if test="addr != null">addr = #{addr},</if>
			<if test="shpNo != null">shp_no = #{shpNo},</if>
		</trim>
		where ord_no = #{ordNo}
	</update>
</mapper>