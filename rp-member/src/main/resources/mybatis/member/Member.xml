<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rp.member.repository.MemberRepositoryImpl">
	<select id="selectMembers" parameterType="com.rp.member.model.Member" resultType="com.rp.member.model.Member">
		SELECT 
			mbr_id as mbrId,
			name as name,
			addr as addr,
			sex as sex,
			birth as birth
		FROM rp_member
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="mbrId != null">
			AND mbr_id = #{mbrId}
			</if>
			<if test="name != null">
			AND name = #{name}
			</if>
			<if test="sex != null">
			AND sex = #{sex}
			</if>
		</trim>
	</select>
</mapper>